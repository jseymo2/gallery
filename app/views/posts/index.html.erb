<strong><%= link_to "Add post", controller: "posts", action: "upload" %></strong><br><br>
<% @posts.each do |post| %>
    <%= link_to image_tag("uploads/" + post.source, size: "100"), controller: "posts", action: "show", id: post %>
    <%= link_to "Edit", controller: "posts", action: "update", id: post %>
    <%= link_to "Delete", contoller: "posts", action: "delete", id: post %>
    <br>
  <% end %>